<Window x:Class="technical_verbs.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:technical_verbs"
        mc:Ignorable="d"
        Title="inputBox" Height="157" Width="279">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="30" Grid.Column="0" Grid.Row="1" Text="Enter name" VerticalAlignment="Center" FontSize="16"></TextBlock>
        <TextBox x:Name="user_name" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="16" >New user</TextBox>
       
        <Button x:Name="Ok_button" Grid.Column="1" Grid.Row="2" Content="OK" Margin="10" Click="Ok_button_Click"></Button>
        <Button x:Name="Close_button" Grid.Column="2" Grid.Row="2" Content="Cancel" Margin="10" Click="Ok_button_Click"></Button>
    </Grid>
</Window>
