<Window
    x:Class="technical_verbs.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:technical_verbs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:test_app.Model"
    xmlns:view_model="clr-namespace:ViewModel"
    Title="TestApp"
    Width="800"
    Height="500"
    mc:Ignorable="d">
    <Window.DataContext>
        <view_model:ViewModel />

    </Window.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<Menu Height="19">
            <MenuItem Header="Menu">
                <MenuItem Click="CredeUser_Click" Header="Setting" />
                <MenuItem Click="OpenFile_Click" Header="Open profile" />
                <MenuItem Click="SaveFile_Click" Header="Save profile" />
                <MenuItem Click="MenuItemExit_Click" Header="Exit" />
            </MenuItem>
            <MenuItem Header="Setting">
                <MenuItem Header="Start index" />
                not work
                <MenuItem Header="End index" />
                not work
            </MenuItem>
        </Menu>-->

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="150" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Text="Ошибки" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Text="Правильные ответы" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Text="Имя" />

                <TextBlock
                    x:Name="textUserName"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0"
                    HorizontalAlignment="Right"
                    Text="New User"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="textMisteke"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0"
                    HorizontalAlignment="Right"
                    Text="{Binding Mistakes}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="textСorrectAnswer"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0"
                    HorizontalAlignment="Right"
                    Text="{Binding CorectAnswer}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>

                    <RowDefinition Height="3.5*" />
                    <RowDefinition Height="5*" />



                </Grid.RowDefinitions>

                <Grid Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <model:ButtonProperties 
                        Margin="10"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Command="{Binding CheckForTheCorrectAnswer}"

                        Content="{Binding ContentButton}"
                        />
                    <model:ButtonProperties 
                        Margin="10"
                        Grid.Column="2"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Command="{Binding CheckForTheCorrectAnswer}"
                        
                        Content="{Binding ContentButton[NumberButton]}"
                        />
                    <model:ButtonProperties 
                        Margin="10"
                        Grid.Column="4"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Command="{Binding CheckForTheCorrectAnswer}"
                        
                        Content="{Binding ContentButton[NumberButton]}"
                        />
                    <model:ButtonProperties 
                        Margin="10"
                        Grid.Column="1"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Command="{Binding CheckForTheCorrectAnswer}"
                        
                        Content="{Binding ContentButton[NumberButton]}"
                        />
                    <model:ButtonProperties 
                        Margin="10"
                        Grid.Column="3"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Command="{Binding CheckForTheCorrectAnswer}"
                        
                        Content="{Binding ContentButton[NumberButton]}"
                        />
                    <model:ButtonProperties 
                        Margin="10"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Command="{Binding CheckForTheCorrectAnswer}"
                        
                        Content="{Binding ContentButton[NumberButton]}"
                        />

                    <!--  start button  -->
                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Margin="15"
                        Command="{Binding NewQuestion}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                        Content="Start"
                        FontSize="20"
                        IsEnabled="{Binding Start}" />
                </Grid>


                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10"
                    VerticalAlignment="Center"
                    FontSize="30"
                    Text="{Binding Question}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />


                <!--<Button x:Name="TEST" Margin="15" Grid.Row="3" Click="CredeUser_Click" Background="Blue" Width="150" Height="50" FontSize="36" HorizontalAlignment="Left">test</Button>-->

            </Grid>
        </Grid>
    </Grid>
</Window>
